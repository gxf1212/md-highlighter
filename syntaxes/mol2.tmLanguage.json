{
    "patterns": [
        {
            "include": "#structure"
        }
    ],
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "scopeName": "source.mol2",
    "name": "mol2",
    "repository": {
        "structure": {
            "patterns": [
                {
                    "begin": "^#",
                    "end": "$",
                    "name": "comment.line"
                },
                {
                    "begin": "^[a-zA-Z0-9]+",
                    "end": "$",
                    "name": "support.function.field"
                },
                {
                    "begin": "^@",
                    "end": "$",
                    "name": "string.quoted.orange",
                    "//": "values of fields",
                    "patterns": [
                        {
                            "match": "(?<=(>))[A-Za-z\\_]+",
                            "name": "keyword.purple"
                        }
                    ]
                },
                {
                    "//": "\\s+[A-Za-z]+",
                    "begin": "^\\s+[0-9]+",
                    "end": "$",
                    "name": "constant.character.atom",
                    "patterns": [
                        {
                            "//": "the first number is not here at all, but we might not need to highlight it.",
                            "match": "(?<=\\s+)\\d+(?=\\s[a-zA-Z]+)",
                            "name": "string.quoted.atom-number"
                        },
                        {
                            "match": "(?<=[0-9]+[\\s]+)[a-zA-Z0-9\\']+(?=(\\s+(-?\\d+\\.\\d+)\\s+(-?\\d+\\.\\d+)))",
                            "name": "variable.other.atom-name"
                        },
                        {
                            "match": "(?<=(-?\\d+\\.\\d+\\s+-?\\d+\\.\\d+\\s+))[a-zA-Z0-9\\_\\.]+((?=([\\s]+[0-9]+[\\s]+[a-zA-Z0-9\\_]+[\\s]+[\\.0-9\\-]+[\\s\\*]*$))|(?=[\\s]*$))",
                            "name": "keyword.atom-type"
                        },
                        {
                            "match": "(?<=\\s+)\\d+(?=\\s)",
                            "name": "variable.other.residue-number"
                        },
                        {
                            "//": "support.other",
                            "match": "(?<=[0-9]+[\\s]+)[a-zA-Z0-9\\_]+(?=([\\s]+[\\-0-9]+[0-9\\.]+[\\s\\*]*$))",
                            "name": "entity.name.type.residue-name"
                        },
                        {
                            "match": "(-?\\d+\\.\\d+)(?<=$)",
                            "name": "variable.other.charge.pdb"
                        }
                    ]
                },
                {
                    "//": "the first number is not here at all, but we might not need to highlight it.",
                    "match": "(?<=^\\s+)[0-9]+(?<=\\s+[0-9]+\\s+[0-9]+\\s+[0-9a-z]+$)",
                    "name": "string.quoted.bond-number"
                },
                {
                    "match": "(?<=^\\s+[0-9]+\\s+)[0-9]+(?<=\\s+[0-9a-z]+$)",
                    "name": "variable.other.atom-number"
                },
                {
                    "match": "(?<=^\\s+[0-9]+\\s+[0-9]+\\s+[0-9]+\\s+)\\S+(?<=$)",
                    "name": "keyword.other.bond-type"
                }
            ]
        }
    }
}